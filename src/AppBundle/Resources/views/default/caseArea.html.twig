{% extends 'AppBundle::layout.html.twig' %}

{% set logo = Frame.webPathLogo %}
{% set headerBanner = Frame.webPathHeaderBanner %}
{% set tagline = Frame.tagline %}
{% set linesHeader = Frame.linesHeader %}
{% set caseAreaHeader = Frame.caseAreaHeader %}
{% set FAQHeader = Frame.FAQHeader %}
{% set contactsHeader = Frame.contactsHeader %}
{% set contactsDescription = Frame.contactsDescription %}
{% set map = Frame.map %}
{% set address = Frame.address %}
{% set phone = Frame.phone %}
{% set email = Frame.email %}
{% set vk = Frame.vk %}
{% set fb = Frame.fb %}

{% block title %} {{ caseArea.title }} {% endblock %}

{% block container %}
    <div class="container">
        <div class="container pm-containerPadding-top-80 pm-containerPadding-bottom-40">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12 wow fadeInUp animated" data-wow-delay="0.3s" data-wow-offset="50" data-wow-duration="1s">
                    <div class="block-one block">
                        <img src="{{ caseArea.getWebPath() }}" width="200" class="img-responsive pm-inline" alt="icon" />

                        <h6 class="pm-column-title">{{ caseArea.title }}</h6>
                    </div>
                </div>

                <div class="col-lg-8 col-md-8 col-sm-12">
                    <div class="block-one">
                        {{ caseArea.description }}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
